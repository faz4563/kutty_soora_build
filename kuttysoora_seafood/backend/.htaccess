# CORS headers are handled in individual PHP files to avoid conflicts
# Uncomment the section below if you want to handle CORS globally instead
# <IfModule mod_headers.c>
#     Header always set Access-Control-Allow-Origin "*"
#     Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
#     Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept"
#     Header always set Access-Control-Max-Age "86400"
#     Header always set Access-Control-Allow-Credentials "true"
#     Header always set Access-Control-Expose-Headers "Content-Length, Content-Range"
# </IfModule>

# Let PHP files handle their own OPTIONS requests and CORS
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Pass Authorization header to PHP
    RewriteCond %{HTTP:Authorization} ^(.*)
    RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]
    
    # Don't interfere with OPTIONS - let PHP handle it
    # RewriteCond %{REQUEST_METHOD} ^OPTIONS
    # RewriteRule ^(.*)$ $1 [R=200,L]
    
    # Ensure PHP files are processed normally
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# CORS headers are handled individually in PHP files
# Image files don't need CORS since they're served directly by Apache
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
    # Images served directly without CORS conflicts
</FilesMatch>

# Cache control for images (optional - improves performance)
<IfModule mod_expires.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        ExpiresActive On
        ExpiresDefault "access plus 1 month"
    </FilesMatch>
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>